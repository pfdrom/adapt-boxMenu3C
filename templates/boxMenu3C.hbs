{{import_globals}}

<div class="menu__inner boxmenu3C__inner">

  {{#any displayTitle subtitle body instruction}}
  <div class="menu__header boxmenu3C__header">
    <div class="menu__header-inner boxmenu3C__header-inner">

      {{#if displayTitle}}
      <div class="menu__title boxmenu3C__title">

        {{#unless _disableAccessibleState}}
        <div class="js-heading"></div>
        {{/unless}}

        <div class="menu__title-inner boxmenu3C__title-inner" {{#unless _disableAccessibleState}}aria-hidden="true"{{/unless}}>
          {{{compile displayTitle}}}
        </div>

      </div>
      {{/if}}

      {{#if subtitle}}
      <div class="menu__subtitle boxmenu3C__subtitle">
        <div class="menu__subtitle-inner boxmenu3C__subtitle-inner">
          {{{compile subtitle}}}
        </div>
      </div>
      {{/if}}

      {{#if body}}
      <div class="menu__body boxmenu3C__body">
        <div class="menu__body-inner boxmenu3C__body-inner">
          {{{compile body}}}
        </div>
      </div>
      {{/if}}

      {{#if instruction}}
      <div class="menu__instruction boxmenu3C__instruction">
        <div class="menu__instruction-inner boxmenu3C__instruction-inner">
          {{{compile instruction}}}
        </div>
      </div>
      {{/if}}

    </div>
  </div>
  {{/any}}

  <div class="menu__item-container boxmenu3C__item-container">
    <div class="menu__item-container-inner boxmenu3C__item-container-inner js-children" role="list">
      {{!-- Menu items render here --}}
    </div>
  </div>

</div>
